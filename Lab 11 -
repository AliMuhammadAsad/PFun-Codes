#Qns 2 - Find the Median
def findMedian(arr):
    pos = len(arr)//2
    arr.sort()
    return arr[pos]

------------------------------------------------------------------------------------------------------------------------------------------------------------

#Qns 3 - Remove all occurences from a list (no slicing or dicing)
def remove_all(t, v):
    if v not in t:
        return 0
    else:
        count = 0
        while v in t:
            count += 1
            t.remove(v)
        return count 
        
